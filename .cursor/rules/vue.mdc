<script setup>
import { ref } from 'vue'
import { ElMessage } from 'element-plus'
import { api } from '@/api.js'

const loading = ref(false)
const form = ref({
  name: '',
  email: ''
})

const submitForm = async () => {
  loading.value = true
  try {
    const result = await api.post('/data', form.value)
    ElMessage.success(result.message)
    form.value = { name: '', email: '' }
  } catch (error) {
    // 错误已由 api.js 统一处理
  } finally {
    loading.value = false
  }
}
</script>

<template>
